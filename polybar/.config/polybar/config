[colors]
include-file = /home/pletcher/.cache/wal/colors-polybar
; background = ${xrdb:color0:#dd2e34}
; background-alt = ${xrdb:color8:#502e3440}
foreground = ${xrdb:color7:#d8dee9}
foreground-alt = ${xrdb:color15:#e5e9f0}
primary = ${xrdb:color2:#a3be8c}
secondary = ${xrdb:color3:#d08770}
alert = ${xrdb:color6:#bf616a}
transparent = #00ffffff

[bar/topbar]
monitor = ${env:MONITOR:eDP-1}
width = 90%
height = 36
offset-x = 5%
offset-y = 0

background = ${colors.background}
foreground = ${colors.foreground}

border-left-size = 2
border-bottom-size = 2
border-right-size = 2
border-color = ${colors.foreground-transparent}

# defaults for modules
format-background = ${colors.background}
format-foreground = ${colors.foreground}

line-size = 3
line-color = #f00

padding = 1

module-margin = 2

font-0 = Hack:pixelsize=16;2
# https://icons8.com/line-awesome/cheatsheet
font-1 = "LineAwesome:pixelsize=24;2"
# https://icomoon.io/app/#/select/font
font-2 = icomoon:style=Regular:pixelsize=18;3

modules-left = bspwm
modules-center =
modules-right = wlan eth xkeyboard temperature battery date

wm-restack = bspwm

scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

cursor-click = pointer

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix = ""
; " "
format-prefix-foreground = ${colors.foreground}

label-layout = %layout%

label-indicator-margin = 1

[module/bspwm]
type = internal/bspwm

label-focused = %name%
label-focused-foreground = ${colors.primary}
label-focused-padding = 1

label-occupied = %name%
label-occupied-foreground = ${colors.foreground}
label-occupied-padding = 1

label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-foreground = ${colors.background}
label-urgent-padding = 1

label-empty =

[module/wlan]
type = internal/network
interface = wlp2s0
interval = 3.0

format-connected = <label-connected>
label-connected =  %essid%

format-disconnected =
ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-foreground = ${colors.foreground}

[module/eth]
type = internal/network
interface = enp0s31f6
interval = 3.0

format-connected-prefix = ""
format-connected-prefix-foreground = ${colors.foreground}
label-connected = %local_ip%

format-disconnected =

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 80

format = <label>
format-warn-foreground = ${colors.alert}

label = %temperature-c%

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98
time-format = %H:%M
ramp-capacity-0 = ""
ramp-capacity-1 = ""
ramp-capacity-2 = ""
ramp-capacity-3 = ""
ramp-capacity-4 = ""

label-charging = %percentage%% %consumption% W
# format-charging-prefix = " "
format-charging = <animation-charging> <label-charging>
animation-charging-0 = ${self.ramp-capacity-0}
animation-charging-1 = ${self.ramp-capacity-1}
animation-charging-2 = ${self.ramp-capacity-2}
animation-charging-3 = ${self.ramp-capacity-3}
animation-charging-4 = ${self.ramp-capacity-4}
animation-charging-framerate = 750

label-discharging = %percentage%% %consumption% W
# format-discharging-prefix = " "
format-discharging = <ramp-capacity> <label-discharging>

format-full-prefix = ${self.ramp-capacity-4}
format-full-prefix-foreground = ${colors.foreground}

[module/date]
type = internal/date
interval = 5

date =
date-alt = " %Y-%m-%d"

time = %H:%M
time-alt = %H:%M:%S

format-prefix = ""
format-prefix-foreground = ${colors.foreground}
label = %date% %time%

[settings]
screenchange-reload = true

[global/wm]
margin-top = 2
margin-bottom = 2

; vim:ft=dosini
